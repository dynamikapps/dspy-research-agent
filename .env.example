# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
# Options: gpt-4, gpt-3.5-turbo, etc.
OPENAI_MODEL=gpt-4o-mini

# Tavily API Configuration
TAVILY_API_KEY=your_tavily_api_key_here

# Optional Alternative LLM Providers
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_API_BASE=https://openrouter.ai/api/v1
# Or any other supported model
OPENROUTER_MODEL=deepseek/deepseek-chat  

OLLAMA_API_BASE=http://localhost:11434/api
# Or any other locally available model
OLLAMA_MODEL=llama3.2:latest

# LLM Provider Selection
# Options: openai, ollama, openrouter
LLM_PROVIDER=openai

# Optional: Stability AI for Image Generation
STABILITY_API_KEY=your_stability_api_key_here

# Optional: Langfuse for Tracking (if using)
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_SECRET_KEY=your_langfuse_secret_key
# Or your self-hosted instance 
LANGFUSE_HOST=https://cloud.langfuse.com